  <%= simple_form_for(@order)  do |f| %>
      <%= f.input :name %>
      <%= f.input :date, html5: true %>
      <%= f.input :theme,
      as: :check_boxes,
      collection: Flower.order(:color),
      label_method: lambda { |flower| "#{cl_image_tag flower.photo.key , class: "fl_label" }<br> #{flower.name} #{flower.color}".html_safe},
      wrapper: :vertical_collection_inline,
      include_hidden: false %>
      <%= f.submit %>
  <% end %>
