<h1>coucou</h1>

<style type="text/css">
	.card {
		cursor: pointer;
	}
	.selection {
		padding: 15px;
		border: 1px solid black;
		width: 100%;
		height: 80px;
		display: flex;

	}

	.tag {
		background-color: blue;
		color: white;
		width: auto;
		padding: 5px;
		height: 10px
		font-size: 0.8rem;
		margin: 3px;

	}
</style>



<div class="container">
	<div class="form-group">
			<input type="text" id="fleur" class="form-control">
	</div>
	<div class="selection mb-4">
		
	</div>
	<form action="/fleurs" method="post">
		<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
		<input type="hidden" name="fleurs" id="fleurs">
		<button type="submit" class="btn btn-primary" >Choisir</button>
	</form>
	<hr>

	<hr>
	<div class="row flex-wrap">
		<% @flowers.each do |flower| %>
			<div class="card" data-id="<%= flower.id %>" data-name="<%= flower.name.downcase %>" style="width:200px;margin: 5px">
				<div class="card-header">
					<%= flower.name.downcase %>
				</div>
				<div class="card-body">
          <%= cl_image_tag flower.photo.key, class: "card-img-top" %>
				</div>
			</div>	
		<% end %>
	</div>
</div>